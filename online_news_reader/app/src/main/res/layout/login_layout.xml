<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- FrameLayout to hold the login form  -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_background">

        <!-- Layout for organizing the form fields and labels  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/custom_pink"
                android:gravity="center" />

            <!-- EditText for the user's email input -->
            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_background"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>

            <!-- EditText for the user's password input with a custom background and an icon -->
            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_background"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <!-- TextView for "Forgot Password" aligned to the end (right side) -->
            <TextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/forgot_password"
                android:textSize="16sp"
                android:textColor="@color/custom_pink"
                android:gravity="end"
                android:clickable="true"
                android:focusable="true" />

            <!-- Button for performing Login -->
            <Button
                android:id="@+id/buttonLogIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/login"
                android:textSize="20sp"
                android:background="@drawable/rounded_btn"
                />

            <!-- TextView to prompt users to register if they are new -->
            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/new_user_register_here"
                android:textSize="18sp" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
